{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/electron",
    "target": "ES2020",
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "electron/**/*",
    "main.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer/**/*"
  ]
}