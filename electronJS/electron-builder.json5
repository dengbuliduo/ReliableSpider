{
  "appId": "com.example.fast-spider",
  "productName": "FastSpider",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/electron/**/*",
    "dist/renderer/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "publish": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "build/icon.png"
  },
  "publish": null
}